<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vsa.filmoteca">
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".FilmotecaApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MainTheme">

        <activity
            android:name=".view.activity.MoviesListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/Theme.MainTheme">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.DetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:parentActivityName=".view.activity.MoviesListActivity"
            android:theme="@style/Theme.DetailTheme">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activity.MoviesListActivity" />
        </activity>
        <activity
            android:name=".view.activity.AboutActivity"
            android:label="@string/about_us"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Transparent">

        </activity>
        <activity
            android:name=".view.activity.CommentsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_comments"
            android:parentActivityName=".view.activity.DetailActivity"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activity.DetailActivity" />
        </activity>

        <receiver android:name=".view.widget.EventsWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_info" />
        </receiver>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="${fabricApiKey}" />
        <meta-data
            android:name="io.twitter.ApiKey"
            android:value="${twitterApiKey}" />
        <meta-data
            android:name="io.twitter.ApiSecret"
            android:value="${twitterApiSecret}" />
    </application>

</manifest>